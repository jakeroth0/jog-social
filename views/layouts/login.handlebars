<html>
  <head>
    <meta charset="UTF-8" />
    <title>Login | JOG SOCIAL</title>
    <link rel="stylesheet" href="{{baseUrl}}/css/main.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-white text-black">
    <header>
      <nav class="p-6 w-full bg-red-900 text-white absolute left-0">
        <ul>
          <li class="inline pr-5"><a href="{{baseUrl}}/">Home</a></li>
          <li class="inline pr-5"><a
              href="{{baseUrl}}/Dashboard"
            >Dashboard</a></li>
          <li class="inline pr-5"><a href="{{baseUrl}}/Logout">Logout</a></li>
        </ul>
      </nav>
    </header>

    <main
      class="!absolute rounded-[60px] left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 w-[600px] h-[600px] p-6 shadow-2xl"
    >
      <div id="login-container" class="">
        <h1 class="text-3xl ml-10">Login</h1>
        {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
        {{/if}}
        <form
          method="post"
          class="container mx-auto"
          action="{{baseUrl}}/login"
        >
          <div class="absolute top-[200px] left-1/2 -translate-x-1/2">
            <label for="username">Username:</label>
            <input
              class="border ml-3"
              type="text"
              id="username"
              name="username"
              required
            />
          </div>
          <div class="absolute top-[240px] left-1/2 -translate-x-1/2">
            <label for="password">Password:</label>
            <input
              class="border ml-3"
              type="password"
              id="password"
              name="password"
              required
            />
          </div>
          <button
            class="absolute left-1/2 -translate-x-1/2 top-[400px] border p-4 rounded-full shadow-lg"
            type="submit"
          >Log In</button>
        </form>
      </div>
    </main>

    <footer class="absolute bottom-4">
      <p>&copy; {{currentYear}} JOG SOCIAL</p>
    </footer>

    <script src="{{baseUrl}}/js/main.js"></script>
  </body>
</html>