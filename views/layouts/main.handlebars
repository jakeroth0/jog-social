<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ChatJOG</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="font-['Roboto']">
    <header class="bg-red-800 text-white p-4 relative">
      <h1 class="text-3xl inline">
        <a href="http://localhost:3001/">ChatJOG</a>
      </h1>
      <nav class="inline">
        <ul>
        </ul>
      </nav>

      <!-- Only display the logout button if the user is logged in -->
      {{#if logged_in}}
        <nav class="absolute right-4 top-1/2 -translate-y-1/2">
          <ul class="text-right">
            <li class="inline ml-4"><a
                href="http://localhost:3001/api/users/profile/{{user_id}}"
              >Profile</a></li>
            <li class="inline ml-4"><a
                href="http://localhost:3001/logout"
              >Logout</a></li>
          </ul>
        </nav>
      {{else}}
        <nav class="absolute right-4 top-1/2 -translate-y-1/2">
          <ul>
            <li><a href="http://localhost:3001/signup">Sign Up</a></li>
          </ul>
        </nav>
      {{/if}}
    </header>
    <main class="container container-fluid mt-5">
      {{{body}}}
    </main>
    <footer class="absolute bottom-2 left-2">
      <div class="container">
        <p>&copy; ChatJOG. All rights reserved.</p>
        <p>Created by Jake Roth, George Thomas, and Orlando Nelson </p>
      </div>

    </footer>

    <!-- Only include the logout script if the user is logged in -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>