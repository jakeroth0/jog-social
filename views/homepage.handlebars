<div
  id="home-container"
  class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 p-8 px-16 shadow-2xl rounded-[40px]"
><p>{{user.id}}</p>
  <h1 class="text-2xl font-bold mb-2">Hello, @{{user.username}}!</h1>
  <p class="text-xl mb-6">Here are some posts made by our community!</p>
  {{#each posts as |post|}}
    <div class="mb-5">
      <div class="col-md-6">
        <h2>{{post.post_title}}</h2>
      </div>
      <div class="col-md-6">
        <h3><a href="mailto:{{post.post_text}}">{{post.post_text}}</a></h3>
      </div>
    </div>
  {{/each}}
</div>